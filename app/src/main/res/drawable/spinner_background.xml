<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>
        <item>
            <shape>
                <solid
                    android:color="#FFFFFF">
                </solid>

                <corners android:radius="3dp" />

                <padding
                    android:bottom="15dp"
                    android:left="10dp"
                    android:right="10dp"
                    android:top="15dp" />
                <stroke
                    android:width="2dp"
                    android:color="@color/colorLightBlack"/>
            </shape>
        </item>
        <item android:height="10dp">
            <bitmap android:gravity="right|center"
                android:src="@drawable/ic_down_arrow_image"
                />
        </item>
    </layer-list></item>

</selector>