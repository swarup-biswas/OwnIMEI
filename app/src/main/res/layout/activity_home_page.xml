<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:orientation="vertical"
    tools:context=".activity.HomePage">

    <RelativeLayout
        android:id="@+id/home_top_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/home_back_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="12dp"
            android:src="@drawable/ic_menu_profile"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_sign_in_ID"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:text="Sign In"
                android:textColor="@color/colorPrimaryWhite"
                android:textSize="@dimen/font_size_14"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@color/colorPrimaryYellow" />

            <TextView
                android:id="@+id/home_sign_up_ID"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="Sign Up"
                android:textColor="@color/colorPrimaryWhite"
                android:textSize="@dimen/font_size_14"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_below="@+id/home_top_navigation"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryYellow" />

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo" />

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <EditText
                    android:id="@+id/home_search_ID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/search_border"
                    android:hint="IMEI/MAC Search"
                    android:textAlignment="center"
                    android:maxLength="15"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/colorPrimaryWhite"
                    android:textColorHint="@color/colorHintText"
                    android:inputType="text"
                    android:imeOptions="actionSearch" />

                <ImageView
                    android:id="@+id/home_search_button"
                    android:layout_alignParentEnd="true"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_inside_search" />
            </RelativeLayout>
        </LinearLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/home_website_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.own"
                android:textColor="@color/colorPrimaryWhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="i"
                android:textColor="@color/colorPrimaryYellow"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mei.com"
                android:textColor="@color/colorPrimaryWhite" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
